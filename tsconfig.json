{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "allowJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@actions/*": [
        "src/actions/*"
      ],
      "@actions": [
        "src/actions/index.ts"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@components": [
        "src/components/index.tsx"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@hocs": [
        "src/hocs/index.tsx"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@layouts": [
        "src/layouts/index.tsx"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@constants": [
        "src/constants/index.ts"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@reducers": [
        "src/reducers/index.ts"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@utils": [
        "src/utils/index.ts"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@models": [
        "src/models/index.ts"
      ],
      "@theme": [
        "src/theme/index.js"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "report"
  ]
}
